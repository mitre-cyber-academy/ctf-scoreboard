%h3
  = t('users.join_team.pending_team_invites_header')
  %small= t('users.join_team.invites_header_desc')
%table.table.table-condensed.table-striped.table-hover
  %thead
  %tr
    %th= t('teams.invite.incomming_invites_table.team_name_header')
    %th= t('teams.invite.incomming_invites_table.invited_on_header')
    %th= t('teams.invite.incomming_invites_table.accept_reject_header')
  - @pending_invites.each do |current|
    %tbody
      %tr{:class=>'warning'}
        %td=current.team.team_name
        %td=current.created_at.strftime("%b %d %Y")
        %td
          = link_to accept_team_user_invite_path(current.team, current) do
            = fa_icon 'check'
          = link_to team_user_invite_path(current.team, current), method: :delete, data: {confirm: t('users.join_team.delete_invite_confirmation')} do
            = fa_icon 'remove'
