- content_for :header do
  = t('users.join_team.header')
- unless @pending_invites.empty?
  = render partial: 'users/_join_team_invites_table'
- unless @pending_requests.empty?
  = render partial: 'users/_join_team_requests_table'
%h3= t('users.join_team.search_for_team_header')
= form_for_filterrific @filterrific, html: { class: 'form_for_filterrific' } do |f|
  .well
    .container
      .row
        .span3
          Team Name
          = f.text_field(                                      |
              :filter_team_name,                               |
              class: 'filterrific-periodically-observed span3' |
            )                                                  |
        .span3
          Affiliation
          = f.text_field(                                      |
              :filter_affiliation,                             |
              class: 'filterrific-periodically-observed span3' |
            )                                                  |
        .span2
          Location
          = f.select(                                    |
              :location,                                 |
              @filterrific.select_options[:location],    |
              { :include_blank => '- Any -' },           |
              :class => "span2",                         |
            )                                            |
        .span3
          Division
          = f.select(                                    |
              :division,                               |
              @filterrific.select_options[:division],  |
              { :include_blank => '- Any -' },           |
              :class => "span3",                         |
            )                                            |
        .span1
          = render_filterrific_spinner

= render(                                 |
partial: 'teams/list',                    |
locals: { teams: @teams }                 |
)                                         |
