= @game.title
= '=' * @game.title.length

- @standard_challenges.group_by(&:categories).each do |categories, challenges|
  - category_names = category_names(categories)
  = "\n\#\#\# #{category_names}\n"
  %table
    %tr
      %th= t('game.show_markdown.markdown_title')
      %th= t('game.show_markdown.markdown_value')
      %th= t('game.show_markdown.markdown_repository')
      %th= t('game.show_markdown.markdown_description')
    - challenges.each do |challenge|
      %tr
        %td= challenge.name
        %td= challenge.point_value
        %td
          %a{:href => "https://\<URL\>/\<YEAR\>-#{category_names}-#{challenge.point_value}"}
            = "\<YEAR\>-#{category_names}-#{challenge.point_value}"
        %td= challenge.description

- if @pentest_challenges
  = "\n\#\#\# #{I18n.t('game.attack_defend_challenges')}\n"
  %table
    %tr
      %th= t('game.show_markdown.markdown_title')
      %th= t('game.show_markdown.markdown_repository')
      %th= t('game.show_markdown.markdown_description')
    - @pentest_challenges.each do |challenge|
      %tr
        %td= challenge.name
        %td
          %a{:href => "https://\<URL\>/\<YEAR\>-#{challenge.name}"}
            = "\<YEAR\>-#{challenge.name}"
        %td= challenge.description
