=form_for @team, :html => { :class => "form-horizontal"} do |f|
  %legend= t('teams.edit.legend')
  %label.label-custom= t('teams.edit.note')
  .control-group
    = f.label :team_name, :class => "control-label"
    .controls
      = f.text_field :team_name, :class => "textarea", maxlength: 255
  .control-group
    = f.label :affiliation, :class => "control-label"
    .controls
      = f.text_field :affiliation, :class => "textarea", maxlength: 255
  .control-group
    = f.label :division, :class => "control-label"
    .controls
      = f.collection_select :division_id, @divisions, :id, :name
  .control-group
    = f.label :looking_for_members, :class => "control-label"
    .controls
      = f.check_box :looking_for_members
  .controls
    = button_tag "Submit", :class => "btn"
