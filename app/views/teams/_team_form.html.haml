=form_for @team, :html => { :class => "form-horizontal"} do |f|
  - if @team.errors.any?
    .alert.alert-error
      %a.close{"data-dismiss" => "alert", :href => "#"} Ã—
      = pluralize(@team.errors.count, "error")
      prohibited this team from being saved:
      %ul.errors
        - @team.errors.full_messages.each do |msg|
          %li= msg
  %legend New Team Information
  %label.label-custom Note: All fields are required.
  .control-group
    = f.label :team_name, :class => "control-label"
    .controls
      = f.text_field :team_name, :class => "textarea"
  .control-group
    = f.label :affiliation, :class => "control-label"
    .controls
      = f.text_field :affiliation, :class => "textarea"
  .control-group
    = f.label :division, :class => "control-label"
    .controls
      = f.collection_select :division_id, Division.all, :id, :name
  .controls
    = button_tag "Submit", :class => "btn"
