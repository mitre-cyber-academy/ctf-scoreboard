%h3.muted Team Flag Submissions
- if @team.solved_challenges.size > 0
  = line_chart @team_flag_submissions, colors: ['#b8d12f', '#00abca']
- else
  .zero-items-text Nothing to Report
%hr
%div.row
  %div.span5
    %h3.muted Solved Challenges
    - if @team.solved_challenges.size == 0
      .zero-items-text No Solved Challenges
    - else
      %table.table.table-bordered.table-striped
        %thead
          %tr
            %th #
            %th= @game.is_a?(PentestGame) ? 'Defense Team' : 'Category'
            %th Points
            %th When
        %tbody
          - @team.solved_challenges.each_with_index do |s, i|
            %tr
              %td= i + 1
              %td= @game.is_a?(PentestGame) ? s.flag.team.team_name : s.challenge.category.name
              %td= s.challenge.point_value
              %td= s.created_at.strftime("%b %e %y, %R %Z")
  %div.span7
    %h3.muted Solved Challenge Breakdown
    - if @team.solved_challenges.size == 0
      .zero-items-text No Solved Challenges
    - else
      = pie_chart @flag_categories

- if @defensive_points
  %hr
  %div.row
    %div.span5
      %h3.muted Defensive Points
      %table.table.table-bordered.table-striped
        %thead
          %tr
            %th Challenge
            %th Points
        %tbody
          - @defensive_points.each do |name, value|
            %tr
              %td= name
              %td= value

- if current_user&.admin?
  %hr
  %div.row
    %div.span5
      %h3.muted Team Members
      %table.table.table-bordered.table-striped
        %thead
          %tr
            %th User ID
            %th Name
            %th Email
        %tbody
          - @team.users.each do |user|
            %tr
              %td=link_to user.id, rails_admin.show_path("user", user)
              %td= user.full_name
              %td= user.email
    %div.span7
      %h3.muted Per User Statistics
      - if @team.solved_challenges.size == 0
        .zero-items-text Nothing to Report
      - else
        = column_chart @per_user_stats, legend: 'bottom', xtitle: "User ID", stacked: true, colors: ['#b8d12f', '#00abca']
%br
