!!!
%html
  %head
    %title= @game&.title
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = render partial: 'layouts/navbar'
    %header#subpage.jumbotron.masthead
      .container
        %h1
          = yield :header
          - if @game&.open?
            = render partial: 'layouts/countdown', locals: { endTime: @game.stop }
        %p
          = yield :subheading
    .colored-divider
    .container
      = render partial: 'layouts/flash_anchor'
    .container
      = yield
  %footer#page-footer.card.card-body.bg-light.footer
    = render partial: 'layouts/footer'
